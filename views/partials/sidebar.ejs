<div class="col-3">
    <div class="container" style="margin-top: 50px">
        <form method="post">
            <div class="from-group">
                <label for="cardName">Name</label>
                <input type="text" class="form-control" id="cardName" name="name">
            </div>
            <div class="form-group">
                <label for="cardDesc">Description</label>
                <textarea type="text" class="form-control" id="cardDesc" name="desc"></textarea>
            </div>
            <div class="form-group">
                <label for="uploader">Files</label>
                <input type="hidden" role="uploadcare-uploader" id="uploader" name="files" data-multiple="true" />
            </div>
            <button class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
